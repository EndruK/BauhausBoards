@import 'nib'
global-reset()

header-hight = 120px //tablet size
header-hight = 20% //tablet size
sidebar-width = 200px
swiper-width = 35px
stroke-height = 25px
sidebar-border-radius = 10px

border-transition(n)
  -webkit-transition left n ease-in-out
  -moz-transition left n ease-in-out
  -ms-transition left n ease-in-out
  -o-transition left n ease-in-out
  transition left n ease-in-out

html,body,#wrapper
  height 100%
  //background-color rgba(230,230,230,1)
  
//CLASSES
.clear
  clear both
.sidebar
  position absolute
  height 100%
  border-top-right-radius sidebar-border-radius
  border-bottom-right-radius sidebar-border-radius
  border-transition(0.4s)
  background-color rgba(200,200,200,0.8)
  z-index 10
.sidebarContent
  width sidebar-width
  text-align center
  float left
  height 100%
.sidebarSwiper
  width swiper-width
  height 100%
  left sidebar-width
  text-align center
  vertical-align middle
  float left
  background-color rgba(0,0,0,0.1)
  z-index 10
  border-top-right-radius sidebar-border-radius
  border-bottom-right-radius sidebar-border-radius
.sidebarLower
  width sidebar-width
  position absolute
  bottom 0

.close-sidebar
  left -200px
.open-sidebar
  left 0px

.strokeSizes
  width inherit
  overflow auto
  //height 100%
  //background-color rgba(255,255,255,.2)
  border-radius 3px
  visibility hidden
  position absolute
  left 0
  top 0
.stroke
  float left
  margin 2px
  //background-color white
  border-radius 3px
  border solid 1px
  border-color black
  width calc(25% - 6px)
  height stroke-height
.strokeBar
  width 100%
  background-color black
  border-bottom solid 1px
  border-radius 3px
.strokeMin
  height 25%
.strokeSmall
  height 50%
.strokeBig
  height 75%
.strokeMax
  height 100%

.colors
  width inherit
  overflow auto
  //background-color rgba(255,255,255,.2)
  border-radius 3px
  visibility hidden
  position absolute
  left 0
  top 0
.colorContainer
  float left
  margin 2px
  border-radius 3px
  border solid 1px
  width calc(25% - 6px)
  height stroke-height
  background-color white
.activeColor
  border-color red
.btnColor
  background-color rgba(0,0,0,1)
  color rgba(255,255,255,1)
  border 1px

.glyphicon-refresh-animate 
