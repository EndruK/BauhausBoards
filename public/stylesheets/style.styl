@import 'nib'
global-reset()

header-hight = 100px
sidebar-width = 200px
swiper-width = 35px

border-transition(n)
  -webkit-transition left n ease-in-out
  -moz-transition left n ease-in-out
  -ms-transition left n ease-in-out
  -o-transition left n ease-in-out
  transition left n ease-in-out

html,body,#wrapper
  height 100%
  
//CLASSES
.sidebar
  position absolute
  height 100%
  border-transition(0.4s)
  background-color rgba(150,150,150,0.8)
.sidebarContent
  width sidebar-width
  text-align center
  float left
  height 100%
.sidebarSwiper
  width swiper-width
  height 100%
  left sidebar-width
  text-align center
  vertical-align middle
  float left
  background-color rgba(150,150,150,0.4)
.sidebarLower
  width sidebar-width
  position absolute
  bottom 0

.close-sidebar
  left -200px
.open-sidebar
  left 0px



//IDs
#sidebarMain
  visibility visible
  
#sidebarBackend
  position absolute
  visibility hidden
#sidebarMessages
  position absolute
  visibility hidden
#sidebarCreateMessage
  position absolute
  visibility hidden
#sidebarFeedback
  position absolute
  visibility hidden
#sidebarChangeStatus
  position absolute
  visibility hidden
#sidebarChangeContent
  position absolute
  visibility hidden
#sidebarViewMessages
  position absolute
  visibility hidden
#sidebarBackendUserSettings
  position absolute
  visibility hidden
#sidebarBackendRoomSettings
  position absolute
