@import 'nib'
//custom font from google
@import url ('http://fonts.googleapis.com/css?family=Quicksand')
global-reset()

header-height = 150px
sidebar-width = 250px

html,body
  height 100%
header
  height header-height
  text-align center
  background-color #aaaaaa
.sidebar
  position absolute
  z-index 1
  float left
  width sidebar-width
  height 100%
  background-color #777777
content
  width 100%
  height 100%
.main-content
  position absolute
  z-index 0
  top header-height
  width "calc(100% - (%s + 25px))" %sidebar-width
  height "calc(100% - %s)" %header-height
  background-color #cccccc
  padding-left 275px
li
  list-style disc