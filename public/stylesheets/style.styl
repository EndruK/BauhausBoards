@import 'nib'
global-reset()

header-hight = 100px
sidebar-width = 200px
swiper-width = 35px

border-transition(n)
  -webkit-transition left n ease-in-out
  -moz-transition left n ease-in-out
  -ms-transition left n ease-in-out
  -o-transition left n ease-in-out
  transition left n ease-in-out

html,body,#wrapper
  height 100%
#header
  background-color #aaaaaa
  padding-left "calc(%s + 10px)" %swiper-width
  //text-align right
  height header-hight
#content
  background-color #777777
  //text-align center
  height "calc(100% - %s)" %header-hight

//sidebar Stuff
.sidebar
  position absolute
  left -200px
  height 100%
  border-transition(0.4s)
  background-color rgba(150,150,150,0.8)
#sidebarContent
  //background-color #999999
  width sidebar-width
  text-align center
  float left
  height 100%
#sidebarSwiper
  width swiper-width
  height 100%
  left sidebar-width
  text-align center
  vertical-align middle
  float left
  background-color rgba(150,150,150,0.4)
#sidebarLower
  width sidebar-width
  position absolute
  bottom 0
.open-sidebar
  left 0