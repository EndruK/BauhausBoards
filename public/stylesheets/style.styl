@import 'nib'
global-reset()

header-hight = 100px
sidebar-width = 200px
swiper-width = 35px

border-transition(n)
  -webkit-transition left n ease-in-out
  -moz-transition left n ease-in-out
  -ms-transition left n ease-in-out
  -o-transition left n ease-in-out
  transition left n ease-in-out

html,body,#wrapper
  height 100%
  
//CLASSES
.sidebar
  position absolute
  height 100%
  border-transition(0.4s)
  background-color rgba(150,150,150,0.8)
  z-index 10
.sidebarContent
  width sidebar-width
  text-align center
  float left
  height 100%
.sidebarSwiper
  width swiper-width
  height 100%
  left sidebar-width
  text-align center
  vertical-align middle
  float left
  background-color rgba(150,150,150,0.4)
  z-index 10
.sidebarLower
  width sidebar-width
  position absolute
  bottom 0

.popupStrokeSize
  width 100px
  height 100px
  position absolute
  background-color #121212

.close-sidebar
  left -200px
.open-sidebar
  left 0px

.strokeContainer
  width inherit
  overflow auto
  padding 5px
  margin 0 auto
.stroke
  float left
  width 25%
  margin inherit
  overflow auto
  visibility hidden
  position absolute
  background-color rgba(255,255,255,.2)
.strokeSelected
  visibility inherit
  position inherit
  float none

.strokeMin
  margin-top 3px
  width 90%
  height 4px
  background-color lightgrey
  margin 0 auto
  border-radius 1px
.strokeSmall
  width 90%
  height 8px
  background-color grey
  margin inherit
  margin-top 3px
  border-radius 1px
.strokeBig
  width 90%
  height 12px
  background-color grey
  margin inherit
  margin-top 3px
  border-radius 1px
.strokeMax
  width 90%
  height 16px
  background-color grey
  margin inherit
  margin-top 3px
  margin-bottom 3px
  border-radius 1px

//IDs
#sidebarMain
  visibility visible
  
#sidebarBackend
  position absolute
  visibility hidden
#sidebarMessages
  position absolute
  visibility hidden
#sidebarCreateMessage
  position absolute
  visibility hidden
#sidebarFeedback
  position absolute
  visibility hidden
#sidebarChangeStatus
  position absolute
  visibility hidden
#sidebarChangeContent
  position absolute
  visibility hidden
#sidebarViewMessages
  position absolute
  visibility hidden
#sidebarBackendUserSettings
  position absolute
  visibility hidden
#sidebarBackendRoomSettings
  position absolute
  visibility hidden
#sidebarBackendLogs
  position absolute
  visibility hidden
  
#header
  background-color #aaaaaa
  padding-left "calc(%s + 10px)" %swiper-width
  height header-hight
#content
  background-color #777777
  text-align center
  height "calc(100% - %s)" %header-hight
#sidebarBackendSettings
  position absolute
  visibility hidden
#EditorCanvas
  visibility hidden
  position absolute
  left 0
  width 100%
  height inherit
  height "calc(100% - %s)" %header-hight